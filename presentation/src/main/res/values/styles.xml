<resources>

    <!-- Toolbar -->
    <style name="App.Toolbar" parent="">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="App.ToolbarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>

    <style name="App.ToolBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- TextAppearance -->
    <!-- http://www.google.com/design/spec/style/typography.html#typography-styles -->
    <style name="App.TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="App.TextAppearance.Headline">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

    <style name="App.TextAppearance.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="App.TextAppearance.Subhead">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="App.TextAppearance.Body" />

    <style name="App.TextAppearance.Body.Primary">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_body1</item>
    </style>

    <style name="App.TextAppearance.Body.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <!-- Floating Action Button -->
    <style name="App.FloatingActionButton" parent="">
        <item name="android:background">@drawable/fab_normal</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
    </style>

</resources>
